{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "lib/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
